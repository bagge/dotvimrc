" Enable syntax highlightning
syntax on

" Set default colorscheme
colorscheme default
set bg=light

" Enable line numbers
set number
set numberwidth=4

" Enable display of line and column in bottom
set ruler

" Enable display of marked area in visual mode
set showcmd

" Run in nocompatible mode
set nocompatible

" Highlight matching braces
set showmatch

" Enable incremental search
set incsearch

" Setup tabs
set tabstop=4
set shiftwidth=4
set softtabstop=0
set expandtab

" Setup display of 80-column limit
"highlight ColorColumn ctermbg=grey ctermfg=black
"set colorcolumn=80

